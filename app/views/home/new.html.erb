<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <% if current_user.admin? %>
        <% if flash.any? %>
          <div class='mt-2'>
            <div class="alert alert-primary" role="alert">
              <% flash.each do |type, msg| %>
                <div>
                  <%= msg %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class='card mt-3'>
          <div class='card-header text-center'>
            <h5 class='text-primary'>Event</h5>
          </div>
          <%= render 'form' %>
          <div class='card-footer'>
            <div class='row'>
              <div class='col-lg-6'>
                <small class='text-muted'><%= current_user.email %></small>
              </div>
              <div class='col-lg-6 text-end'>
                <small><%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to sign out?"} %></small>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <h3 class="mt-4">Nothing is here....!!!!</h3>
      <% end %>
    </div>
  </div>
</div>